<br>

<div class="row">
	<div class="col-md-4 col-md-offset-4"> 
		<%= form_for @user do |f| %>
		<%= f.label :name %>
		<%= f.text_field :name %>

		<%= f.label :email %>
		<%= f.text_field :email %>

		<%= f.label :password %>
		<%= f.password_field :password %>

		<%= f.label :password_confirmation, "confirmation" %>
		<%= f.password_field :password_confirmation %>

		<%= f.submit "Create my account", class: "btn btn-primary" %>
		<% end %>
	</div>
</div>